<%- include("./partials/header") %>
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %> </a>
                        <div class="meta">
                            <span><%= blog.created.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 70) %></p>
                        </div>
                        <div class="extra">
                            <a class="small ui violet basic button" href="/blogs/<%= blog._id %>">
                                Read more
                                <i class="small right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

</div>

<%- include("./partials/footer") %>